{
  "name": "@jettoblack/image_mcp",
  "version": "1.0.0",
  "description": "MCP server for image summarization using OpenAI-compatible chat completion endpoints",
  "main": "build/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jettoblack/image_mcp.git"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "dev": "tsx watch src/index.ts",
    "start": "node build/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "bin": {
    "image_mcp": "build/index.js"
  },
  "keywords": [
    "mcp",
    "server",
    "image",
    "summarization",
    "openai",
    "chat",
    "completion",
    "vision"
  ],
  "author": "jettoblack",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fs-extra": "^11.1.0",
    "mime-types": "^2.1.35",
    "sharp": "^0.34.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
